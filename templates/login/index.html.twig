{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<div class="flex min-h-full items-center justify-center px-4 py-12 sm:px-6 lg:px-8">
		<div class="w-full max-w-md space-y-8">
			<div>
				<img class="mx-auto h-12 w-auto" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
				<h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Connexion</h2>
			</div>
			<form class="mt-8 space-y-6" action="{{ path('login') }}" method="POST">
				<input type="hidden" name="remember" value="true">
				<div class="-space-y-px rounded-md shadow-sm">
					<div {{ react_component('LoginForm', {'label': 'Adresse mail', 'for' : 'username', 'inputId' : 'username', 'name' : '_username', 'type' : 'text', 'autocomplete' : 'email'} ) }}></div>
					<div {{ react_component('LoginForm', {'label': 'Mot de passe', 'for' : 'password', 'inputId' : 'password', 'name' : '_password', 'type' : 'password', 'autocomplete' : 'current-password'} ) }}></div>
				</div>
				<div class="text-sm">
					<a href="#" class="font-medium text-indigo-600 hover:text-indigo-500">Mot de passe oubli√© ?</a>
				</div>
				<div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<div {{ react_component('Button', {'content': 'Connexion'} ) }}></div>
				</div>
			</form>
		</div>
	</div>

{% endblock %}

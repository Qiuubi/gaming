{% extends 'base.html.twig' %}

{% block title %}Game
{% endblock %}

{% block body %}
	<h1>Game</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ game.id }}</td>
			</tr>
			<tr>
				<th>Name</th>
				<td>{{ game.name }}</td>
			</tr>
			<tr>
				<th>CreatedAt</th>
				<td>{{ game.createdAt ? game.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Img</th>
				<td>{{ game.img }}</td>
			</tr>
			<tr>
				<th>Story</th>
				<td>{{ game.story }}</td>
			</tr>
			<tr>
				<th>Year</th>
				<td>{{ game.year ? game.year|date('Y-m-d') : '' }}</td>
			</tr>
		</tbody>
	</table>

	<div {{ react_component('ShowGame') }}></div>

	<a href="{{ path('games') }}">back to list</a>

	<a href="{{ path('game_edit', {'id': game.id}) }}">edit</a>

	{{ include('game/_delete_form.html.twig') }}
{% endblock %}
